#include <stdio.h>
FILE *show;
char way [100];
char text[1000];
int number = 0;
int b = 0;
int main()  {
printf("The way:");
    scanf("%s",&way);
    show = fopen(way, "r+");
    while (1)                       {
    if (fgets (text, 1000, show ) == NULL ) {
    b++;
    break;
                                            }
    printf("%s", text);
    for (int i = 0; i < strlen(text);i++) {
        if ((text[i]!= ' ' && text[i + 1] == ' ' )) {
        number++;
                                                    }
                                          }
                                    }
    printf("\n");
    printf("Number of words:%d" ,number + b + 1);
    fclose(show);
    return 0;
              }
